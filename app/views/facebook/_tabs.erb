  <%= fb_tab_item "Humans", facebook_nested_url(facebook_humans_path), :align => :left %>
  <%= fb_tab_item "Market", facebook_nested_url(facebook_items_path), :align => :left %>
  <%= fb_tab_item "Shops", facebook_nested_url(facebook_shops_path), :align => :left %>

  <%= fb_tab_item "Lobby", facebook_nested_url(facebook_root_path), :align => :right %>
